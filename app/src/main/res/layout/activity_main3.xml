<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Main3Activity">

    <ImageView
        android:id="@+id/img_track"
        android:layout_width="190dp"
        android:layout_height="189dp"
        android:layout_marginTop="112dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_nameTrack"
        android:layout_width="197dp"
        android:layout_height="39dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#1B1A1A"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_track"
        app:layout_constraintVertical_bias="0.008" />

    <TextView
        android:id="@+id/tv_nameArtist"
        android:layout_width="193dp"
        android:layout_height="35dp"
        android:layout_marginTop="71dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#8C8C8C"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_track"
        app:layout_constraintVertical_bias="0.015" />

    <TextView
        android:id="@+id/tv_nameAlbum"
        android:layout_width="187dp"
        android:layout_height="41dp"
        android:layout_marginTop="120dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#8C8C8C"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_track"
        app:layout_constraintVertical_bias="0.011" />

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="176dp"
        android:layout_height="51dp"
        android:layout_marginTop="196dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#8C8C8C"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_track"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_escuchar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="287dp"
        android:text="escuchar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_track"
        app:layout_constraintVertical_bias="0.172" />
</androidx.constraintlayout.widget.ConstraintLayout>